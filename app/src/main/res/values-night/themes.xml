<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayStationApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.   purple_200  purple_700 -->
        <!--color of actionbar-->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!--color of text on dark mood-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--to apply primary color of actionbar    -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>